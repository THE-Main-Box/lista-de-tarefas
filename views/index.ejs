<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <script src="front.js" defer></script>
    <title>To-Do List</title>
  </head>
  <body>
    <header>
        <% if(task == null){ %>

        <form action="/cr" method="post">
          <input type="text" name="task" id="task" placeholder="TAREFA..." />
          <button id="addButton" type="submit">Adicionar</button>
        </form>
        <% } else { %>
        <form action="/update/<%= task._id %>" method="post">
          <input type="text" name="task" id="task" value="<%= task.task %>" />
          <button id="addButton" type="submit">Atualizar</button>
        </form>
        <form action="/">
          <button type="submit">Cancel</button>
        </form>
        <% } %>
    </header>

   
    <section id="tasks">
      <ul>
        <% taskList.forEach((task)=>{ %> 
            <% if(task.edited) { %>

        <li>
          <%= task.task %> | <%= task.date.toLocaleDateString('pt-BR') %>
          Editado
          <a href="/getID/<%= task._id %>/update">Edit</a>
          <a href="/getID/<%= task._id %>/delete">Delete</a>
        </li>

        <% } else { %>

        <li>
          <%= task.task %> | <%= task.date.toLocaleDateString('pt-BR') %>
          <a href="/getID/<%= task._id %>/update">Edit</a>
          <a href="/getID/<%= task._id %>/delete">Delete</a>
        </li>

        <% } %>
         <% }) %>
      </ul>
    </section>


 <% if(taskDelete != null) {%>
    <section id="modal">
        <div id="card">

            <a href="/">x</a>
            <h2>Confirm</h2>
            <hr>
            <p>Quer Realmente DELETAR a Tarefa: <%= taskDelete.task %>?</p>

            <a href="/">NÃ£o</a>
            <a href="/deleteTask/<%= taskDelete._id %>">Sim</a>
        </div>

    </section>

    <% } %>

  </body>
</html>
