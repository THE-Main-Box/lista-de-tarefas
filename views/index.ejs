<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <script src="front.js" defer></script>
    <title>To-Do List</title>
  </head>
  <body>
    <form action="/cr" method="post">
      <input type="text" name="task" id="task" placeholder="TAREFA..." />
      <button id="addButton" type="submit">Adicionar</button>
    </form>

    <ul>
      <% tasks.forEach((task)=>{ %>
      <li>
        <%= task.task %> | <%= task.date.toLocaleDateString('pt-BR') %>
      </li>
      <% })%>
    </ul>
  </body>
</html>
